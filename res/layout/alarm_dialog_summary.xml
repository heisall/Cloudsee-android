<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="12dp"
        android:background="@drawable/shape_alarm_dialog_bg" >

        <TextView
            android:id="@+id/dialog_denglu_warming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/str_alarm_info"
            android:textColor="@color/dialogchannaltext"
            android:textSize="20sp" />

        <View
            android:id="@+id/dialog_divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/dialog_denglu_warming"
            android:layout_marginTop="15dp"
            android:background="@color/gainsboro" />

        <LinearLayout
            android:id="@+id/linear_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_divider"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_alarm_dev"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_devicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="设备昵称最多八个"
                android:textColor="@color/dialognamecolor"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineartwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_one"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/devicemodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_alarm_type"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_devicemodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dialognamecolor"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineartwo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/dialog_alarm_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_alarm_time"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_alarm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/dialognamecolor"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearthree"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" >
                <TextView
                    android:id="@+id/dialog_view"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bg"
                    android:gravity="center"
                    android:text="@string/str_alarm_preview"
                    android:textColor="@color/dialog_view"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dialog_cancel"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bg"
                    android:gravity="center"
                    android:text="@string/str_alarm_ignore"
                    android:textColor="@color/dialog_view"
                    android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/dialog_cancle_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/close_icon" />

</FrameLayout>