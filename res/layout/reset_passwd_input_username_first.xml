<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_input_user_name_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_passwd_input_account"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_account"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/third_input"
            android:paddingLeft="6dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_check_user_name_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/str_not_bind_phone_tips1"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/blue_bg"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>